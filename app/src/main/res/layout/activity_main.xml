<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg_coba">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_coba"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="140dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/rec_coba" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="-285dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Log In"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/log_coba" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/log_coba" />


    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="-120dp"
        android:layout_marginLeft="65dp"
        android:text="Email Address"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="65dp"
        android:text="Password"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/buttonlogin"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/button_coba"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:fontFamily="sans-serif-black"
        android:hint="LOGIN"
        android:textColorHint="@color/white"
        android:textSize="14dp" />

    <Button
        android:id="@+id/regnow"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="253dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-black"
        android:hint="Forgot Password?"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textregist"
</LinearLayout>